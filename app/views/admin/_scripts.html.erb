<script>
  window.intercomSettings = {
    app_id: "<%= ENV.fetch('INTERCOM_APP_ID') %>",
    name: "<%= current_user.full_name %>",
    email: "<%= current_user.email %>",
    <% if (account = current_user.accounts.first) %>
    company: {
      id: "<%= account.id %>",
      name: "<%= account.name %>",
      created_at: <%= account.created_at.to_i %>,
      entries_count: <%= account.entries_count %>
    },
    <% end %>
    created_at: <%= current_user.created_at.to_i %>,
    user_hash: "<%= OpenSSL::HMAC.hexdigest(
      'sha256',
      ENV.fetch('INTERCOM_SECRET_KEY'),
      current_user.email
    ) %>"
  };
</script>
