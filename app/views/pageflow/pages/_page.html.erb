<%= cache page do %>
  <%= content_tag :section,
    id: page.perma_id,
    class: page_css_class(page),
    data: {
      :template => page.template,
      :id => page.id,
      :chapter_id => page.chapter_id
    } do %>
    <%= render partial: Pageflow.config.page_types.find_by_name!(page.template).template_path.sub('_', ''),
      locals: {
        page: page,
        configuration: page.configuration,
        page_counter: page_counter,
        revision: page.chapter.entry.revisions.last
      } %>
    <a class="to_top" href="#content"><%= t('pageflow.public.goto_top') %></a>
  <% end %>
<% end %>
