<script>
  window.intercomSettings = {
    app_id: "<%= ENV.fetch('INTERCOM_APP_ID') %>",
    name: "<%= current_user.full_name %>",
    email: "<%= current_user.email %>",
    <% if (account = current_user.accounts.first) %>
    company: {
      id: "<%= account.id %>",
      name: "<%= account.name %>",
      created_at: <%= account.created_at.to_i %>,
      entries_count: <%= account.entries_count %>,
      company_website: "<%= account.default_theming.home_url %>",
      admin_account_url: "https://"+window.location.hostname+"/admin/accounts/#{account.id}"
    },
    <% end -%>
    <%# Field values must be JSON Strings, Numbers or Booleans - Objects and Arrays will be rejected. -%>
    memberships: "<%= current_user.
      memberships.
      map do |membership|
        "#{membership.entity.try(:name) || membership.entity.try(:title)} (#{membership.role})"
      end.join(", ") %>",
    admin_user_url: "https://"+window.location.hostname+"/admin/users/#{current_user.id}",
    created_at: <%= current_user.created_at.to_i %>,
    user_hash: "<%= OpenSSL::HMAC.hexdigest \
      'sha256',
      ENV.fetch('INTERCOM_SECRET_KEY'),
      current_user.email %>"
  };

  Raven.setUserContext({
    id: "<%= current_user.id %>",
    email: "<%= current_user.email %>",
    name: "<%= current_user.full_name %>"
  })
</script>
